{
    "luci-app-justclash": {
        "description": "Grant UCI and RPC access to LuCI app justclash",
        "read": {
            "file": {
                "/etc/init.d/justclash": [
                    "exec"
                ],
                "/usr/bin/justclash": [
                    "exec"
                ],
                "/usr/bin/justclash_info": [
                    "exec"
                ],
                "/var/default.justclash.config": [
                    "read"
                ]
            },
            "uci": [
                "justclash"
            ]
        },
        "write": {
            "file": {
                "/var/default.justclash.config": [
                    "write"
                ]
            },
            "uci": [
                "justclash"
            ]
        }
    }
}