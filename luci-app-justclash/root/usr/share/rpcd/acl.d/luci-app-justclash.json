{
    "luci-app-justclash": {
        "description": "Grant UCI and RPC access to LuCI app justclash",
        "read": {
            "file": {
                "/etc/init.d/justclash": [
                    "exec"
                ],
                "/usr/bin/justclash": [
                    "exec"
                ],
                "/etc/justclash/default.config": [
                    "read"
                ],
                "/etc/justclash/rulesets.txt": [
                    "read"
                ],
                "/etc/justclash/block.rulesets.txt": [
                    "read"
                ],
                "/etc/crontabs/root": [ "read" ]
            },
            "uci": [
                "justclash"
            ]
        },
        "write": {
            "file": {
                "/etc/justclash/default.config": [
                    "write"
                ],
                "/etc/crontabs/root": [
                    "write"
                ]
            },
            "uci": [
                "justclash"
            ]
        }
    }
}